<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EbayScraperWPF"
        xmlns:ContainerViews="clr-namespace:EbayScraperWPF.ContainerViews" x:Class="EbayScraperWPF.Views.FindItemView"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid>
        <ContainerViews:FindItemContainerView Margin="305,60,45,10"/>
        <ListView ItemsSource="{Binding FindEbayItemDataList}" SelectedItem="{Binding SelectedFindEbayItemData, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"  Width="250" Margin="10,60,540,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item Name" x:Name="Firstname" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ItemName}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
